{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "../"  // Change this to point to the parent directory
  },
  "include": [
    "**/*.ts",
    "../shared/**/*.ts" // Include TypeScript files in the shared directory
, "firebaseConfig.ts"  ],
  "exclude": [
    "node_modules"
  ]
}
